<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_cyan"
    tools:context=".MainActivity">

    <!-- Header Atas (Tombol Back & Judul) -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_dark" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vendor_profile_title"
        android:textColor="@color/text_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/backButton" />

    <ImageView
        android:id="@+id/cartButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="10dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_shopping_bag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/backButton"
        app:layout_constraintBottom_toBottomOf="@id/backButton"
        app:tint="@color/text_dark"/>

    <!-- BAGIAN PROFIL VENDOR YANG BARU (HORIZONTAL) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/vendorProfileImageCard"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="45dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backButton">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/vendor_profile_pic" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/vendorInfoContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/vendorProfileImageCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vendorProfileImageCard"
        app:layout_constraintTop_toTopOf="@id/vendorProfileImageCard">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tag_open"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Lagi Buka"
                android:textColor="@color/dark_green"
                android:textSize="12sp"
                app:drawableTint="@color/dark_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_tag_bestseller"
                android:drawableStart="@drawable/ic_star_filled"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Best Seller"
                android:textColor="@color/orange_accent"
                android:textSize="12sp"
                app:drawableTint="@color/orange_accent" />
        </LinearLayout>

        <TextView
            android:id="@+id/vendorNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/vendor_name"
            android:textColor="@color/text_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vendorCategoryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vendor_category"
            android:textColor="@color/text_light"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Info Box, Kategori, dan RecyclerView tetap sama seperti sebelumnya -->
    <LinearLayout
        android:id="@+id/statsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/vendorProfileImageCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- Box Rating -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            app:cardCornerRadius="12dp" app:cardBackgroundColor="@color/white" app:cardElevation="2dp" android:layout_marginEnd="8dp">
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center" android:padding="12dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rating_value" android:textColor="@color/text_dark" android:textStyle="bold" android:drawableStart="@drawable/ic_star" android:drawablePadding="4dp" app:drawableTint="@color/orange_accent"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rating_reviews" android:textSize="12sp" android:textColor="@color/text_light"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <!-- Box Harga -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            app:cardCornerRadius="12dp" app:cardBackgroundColor="@color/white" app:cardElevation="2dp" android:layout_marginHorizontal="4dp">
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center" android:padding="12dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/price_range" android:textColor="@color/text_dark" android:textStyle="bold"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/price_label" android:textSize="12sp" android:textColor="@color/text_light"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <!-- Box Rekomen -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            app:cardCornerRadius="12dp" app:cardBackgroundColor="@color/white" app:cardElevation="2dp" android:layout_marginStart="8dp">
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center" android:padding="12dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/recommendations_value" android:textColor="@color/text_dark" android:textStyle="bold"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/recommendations_label" android:textSize="12sp" android:textColor="@color/text_light"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/catalogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Kategori Produk"
        android:textColor="@color/text_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statsContainer" />

    <HorizontalScrollView
        android:id="@+id/categoryScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/catalogTitle">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button android:id="@+id/btnCatMakan" style="@style/Widget.MaterialComponents.Button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Peralatan Makan" android:backgroundTint="@color/primary_green"/>
            <Button android:id="@+id/btnCatTas" style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="8dp" android:text="Tas &amp; Kemasan" android:textColor="@color/text_dark" app:strokeColor="@color/text_light"/>
            <Button android:id="@+id/btnCatPerawatan" style="@style/Widget.MaterialComponents.Button.OutlinedButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="8dp" android:text="Perawatan Diri" android:textColor="@color/text_dark" app:strokeColor="@color/text_light"/>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/productRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="8dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        app:layout_constraintTop_toBottomOf="@id/categoryScrollView"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_product" />

</androidx.constraintlayout.widget.ConstraintLayout>